generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id                Int  @id  @default(autoincrement())
  gitId             Int ?
  userName          String  @unique
  email             String? 
  password          String
  img               String
  friends           User[]  @relation("friends")
  friendsFollowing  User[]  @relation("friends")
  post              Post?
  comment           Comment?
  requests          Request[]
}

model Post{
  id      Int   @id   @default(autoincrement())
  text    String
  img     String?
  likes   Int 
  date    DateTime    @default(now())
  user    User @relation(fields: [userId], references: [id])
  userId  Int  @unique 
}

model Comment{
  id      Int   @id   @default(autoincrement())
  text    String
  likes   Int   
  postId  Int
  user    User  @relation(fields: [userId], references: [id])
  userId  Int   @unique
}

model Request{
  id          Int   @id   @default(autoincrement())
  response    String  
  users       User[]
}
